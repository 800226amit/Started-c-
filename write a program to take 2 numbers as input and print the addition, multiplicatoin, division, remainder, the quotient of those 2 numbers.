//Write a program to take 2 number as input and print the addition, substraction, multiplication, division, remindar, quotient of theose 2 numbers.


#include <bits/stdc++.h>
using namespace std;
int main(){
    int a, b, sum, sub, mul, div,rem;
    cout << "Enter the first no :" << endl;
    cin >> a;
    cout << "Enter the secont no " << endl;
    cin >>b;

    sum=a+b;
    cout << "Addition no :" ;
    cout << sum << endl;
    sub=a-b;
    cout << "substraction no:" ;
    cout << sub << endl;
    mul=a*b;
    cout << "multiplication no:";
    cout << mul << endl;
    div =a/b;
    cout << " Devision no :";
    cout << div << endl;
    rem =a%b;
    cout << "Remainder no:";
    cout<< rem<< endl;
    return 0;
}
